<div class="container">

	<div class="container">
    <h1><%= @user.name %></h1>

    <p><%= @user.username %></p>

    <% if user_signed_in? %>
      <% if current_user.following?(@user) %>
        <p><%= link_to "Unfollow", unfollow_user_path(@user.username), method: :delete %></p>
      <% else %>
        <p><%= link_to "Follow", follow_user_path(@user.username), method: :post %></p>
      <% end %>
    <% else %>
      <p>
        <%= link_to "Sign up now!", signup_path %> || <%= link_to "Sign in", signin_path %>
      </p>
    <% end %>
  </div>

	<table class="table">
    <thead>
      <tr>
        <th>User</th>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tweets.each do |tweet| %>
        <tr>
          <td><%= tweet.user.username %></td>
          <td><%= tweet.content %></td>
          <td><%= link_to 'Show', tweet %></td>
          <% if tweet.user == current_user %>
            <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
            <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end%>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>