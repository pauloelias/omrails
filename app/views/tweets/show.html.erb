<div class="container">

  <p>
    <strong>Image:</strong>
    <img src="<%= @tweet.image %>">
  </p>  

  <p>
    <strong>User:</strong>
    <%= link_to @tweet.user.username, user_path(@tweet.user.username) %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= @tweet.content %>
  </p>

  <% if @tweet.user == current_user %>
    <%= link_to 'Edit', edit_tweet_path(@tweet) %> |
    <%= link_to 'Delete', @tweet, method: :delete %> |
  <% end %>
  <%= link_to 'Back', tweets_path %>

</div>