<div class="container mt-3">
  <div class="row">
    <% if @user %>
      <div class="col-md-4">
          <%= render 'users/card', user: @user %>
      </div>
      <div class="col-md-8">
        <% @spaces.each do |space| %>
          <%= render 'spaces/card', space: space %>
        <% end %>
      </div>
    <% else %>
      <div>
        <% @spaces.each do |space| %>
          <%= render 'spaces/card', space: space %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
