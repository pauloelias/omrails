<div class="container"

	<p>
	  <strong>Title:</strong>
	  <%= @space.title %>
	</p>

	<p>
	  <strong>Image:</strong>
	  <% if @space.image.present? %>
        <%= image_tag @space.image.url(:thumb), :class => "card-img-top" %>
      <% end %>
	</p>

	<p>
	  <strong>Desscription:</strong>
	  <%= @space.desscription %>
	</p>

	<p>
	  <strong>Rating:</strong>
	  <%= @space.rating %>
	</p>

	<p>
	  <strong>User:</strong>
	  <%= @space.user.username %>
	</p>

	<% if @space.user == current_user %>
		<%= link_to 'Edit', edit_space_path(@space) %> |
		<%= link_to 'Delete', @space, method: :delete %> |
	<% end %>
	<%= link_to 'Back', spaces_path %>

</div>