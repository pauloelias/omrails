<div class="container">

  <h1>Tweets</h1>

  <div class="container">
    <h4>Your Account <small><%= link_to current_user.username, user_path(current_user.username) %></small></h4>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>User</th>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tweets.each do |tweet| %>
        <tr>
          <td><%= link_to tweet.user.username, user_path(tweet.user.username) %></td>
          <td><%= tweet.content %></td>
          <td><%= link_to 'Show', tweet %></td>
          <% if tweet.user == current_user %>
            <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
            <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end%>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <% if user_signed_in? %>
    <%= link_to 'New Tweet', new_tweet_path %>
  <% end %>
</div>